%h1
  = t('savage_beast.edit_topic')
= error_messages_for :topic
- form_for :topic, :url  => forums_forum_topic_path(@forum, @topic), :html => { :method => :put } do |f|
  = render :partial => "form", :object => f
  %br
  = submit_tag t('savage_beast.save_changes'), :or => link_to(t('savage_beast.cancel'), forums_forum_topic_path(@forum, @topic))
